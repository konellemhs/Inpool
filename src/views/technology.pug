extends layout/layout
block title
  title #{title} - Технологиии
block variables
  -var namespace = 'technology';
  -var name = technology_name;
block content
  section.section.home-screen.home-standart
    .home-screen__gradient.home-standart__gradient
    .home-screen__background
      .home-screen__scene.scene(data-parralax='0.35' data-parralax-top)
        .image.image_cover
          img(data-src='./img/technology/home.jpg', alt="image").lazyload
     
    .container.home-screen__container
      .row.home-standart__content
        .home-standart__left.col-xl-6
          h1.h3.home-standart__title Оцените технологическое совершенство INPOOL&nbsp;CONCEPT
        .home-standart__right.offset-xxl-2.col-xxl-3.offset-xl-1.col-xl-4
          p INPOOL&nbsp;CONCEPT - это совокупность лучших технологий мировых производителей бассейнов. Мы продумали каждую деталь, чтобы вы могли наслаждаться отдыхом. 
        
      button.home-standart__scroll-bottom(aria-label='scroll bottom' data-scroll='bottom')
        svg.icon
          use(xlink:href='./img/icons/icons-sprite.svg#bottom-arrow')

