                img(data-src="./img/portfolio/ozera/4.jpg", alt="image").lazyload
              .image.image_cover.jsTouchHover
                img(data-src="./img/portfolio/ozera/5.jpg", alt="image").lazyload
              .image.image_cover.jsTouchHover
                img(data-src="./img/portfolio/ozera/6.jpg", alt="image").lazyload
              .image.image_cover.jsTouchHover
                img(data-src="./img/portfolio/ozera/7.jpg", alt="image").lazyload
          
          .portfolio-section__slider.order-lg-4.col-12
            .leaf-message.portfolio-section__leaf-message.d-none.d-sm-inline-flex.d-lg-none
              span Листайте
              svg.icon
                use(xlink:href='./img/icons/icons-sprite.svg#arrow')
            .splide
              .splide__track
                .splide__list
                  //slide
                  .splide__slide.portfolio-section__slide(data-index='0')
                    .image.image_cover.jsTouchHover
                      img(data-src="./img/portfolio/ozera/1.jpg", alt="image").lazyload
                  //slide
